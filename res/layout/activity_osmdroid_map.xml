<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black" >

	<sk.svt.mapamatfyzu.BoundedMapView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/osmmapview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="25dp"
        android:clickable="true"
        android:enabled="true" >
    </sk.svt.mapamatfyzu.BoundedMapView>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="@string/osm_map_preview_sk"
        android:textColor="@color/white" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editText1"
        >

    </ListView>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/osmmapview"
        android:ems="10" />

    <Button
        android:id="@+id/button_hide"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/osmmapview"
        android:text="@string/hide_search_sk" />

    <Button
        android:id="@+id/button_show"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_above="@+id/listView1"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/osmmapview"
        android:text="@string/show_search_sk" />

    <Button
        android:id="@+id/button_floor"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/button_hide"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/osmmapview"
        android:text="@string/button_floor_sk" />

    <ListView
        android:id="@+id/listView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/button_floor"
        android:layout_below="@+id/button_floor" >

    </ListView>

</RelativeLayout>